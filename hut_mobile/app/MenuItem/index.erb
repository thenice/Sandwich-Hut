<div class="toolbar">
  <% if SyncEngine::logged_in == 1 %>
      <div class="leftItem blueButton">
        <a href="<%= url_for :controller => :Settings, :action => :do_sync %>">Sync</a>
      </div>
      <div class="rightItem regularButton">
        <a href="<%= url_for :controller => :Settings, :action => :do_sync %>">Order Now</a>
        <a href="<%= url_for :controller => :Settings, :action => :logout %>">Logout</a>
      </div>
  <% else %>
      <div class="rightItem regularButton">
        <a href="<%= url_for :controller => :Settings, :action => :login %>">Login</a>
      </div>
  <% end %>
</div>
<div class="pageTitle">
  <h1>Hut Menu</h1>
</div>
<div class="content">
  <ul>
    <% @menuitems.each do |menuitem| %>
    
        <li>
          <a href="<%= url_for :action => :show, :id => menuitem.object %>">
            <span class="title"><%= menuitem.name %></span><span class="disclosure_indicator"></span>
          </a>
        </li>
    
    <% end %>
  </ul>
</div>