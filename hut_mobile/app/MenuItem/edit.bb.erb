<div id="pageTitle">
		<h1>Edit <%= @menuitem.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @menuitem.object %>
    <%= link_to "Delete", :action => :delete, :id => @menuitem.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @menuitem.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="menuitem[name]" value="<%= @menuitem.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="menuitem[description]" value="<%= @menuitem.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Category: </td>
              			<td class="itemValue"><input type="text" name="menuitem[category_id]" value="<%= @menuitem.category_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Price: </td>
              			<td class="itemValue"><input type="text" name="menuitem[price]" value="<%= @menuitem.price %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
