<div id="pageTitle">
		<h1>Edit <%= @order.customer_id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @order.object %>
    <%= link_to "Delete", :action => :delete, :id => @order.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @order.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Customer: </td>
              			<td class="itemValue"><input type="text" name="order[customer_id]" value="<%= @order.customer_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Pick up at: </td>
              			<td class="itemValue"><input type="text" name="order[pick_up_at]" value="<%= @order.pick_up_at %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Total: </td>
              			<td class="itemValue"><input type="text" name="order[total]" value="<%= @order.total %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Is delivery: </td>
              			<td class="itemValue"><input type="text" name="order[is_delivery]" value="<%= @order.is_delivery %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
