<div id="pageTitle">
		<h1>Edit <%= @menuitemdefault.menu_item_id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @menuitemdefault.object %>
    <%= link_to "Delete", :action => :delete, :id => @menuitemdefault.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @menuitemdefault.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Menu item: </td>
              			<td class="itemValue"><input type="text" name="menuitemdefault[menu_item_id]" value="<%= @menuitemdefault.menu_item_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Ingredients json: </td>
              			<td class="itemValue"><input type="text" name="menuitemdefault[ingredients_json]" value="<%= @menuitemdefault.ingredients_json %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
