<div class="pageTitle">
  <h1>New <%= @category.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @category.object %>"/>
    <ul>
      
          <li>
            <label for="category[name]" class="fieldLabel">Name</label>
            <input type="text" name="category[name]" <%=
            placeholder("Name") %> />
          </li>
      
          <li>
            <label for="category[id]" class="fieldLabel">Id</label>
            <input type="text" name="category[id]" <%=
            placeholder("Id") %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Create"/>
  </form>
</div>