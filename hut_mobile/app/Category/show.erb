<div class="pageTitle">
  <h1><%= @category.name %></h1>
</div>



<div class="toolbar">
  <div class="leftItem regularButton">
    <a href="<%= Rho::RhoConfig.start_path %>">Start Over</a>
  </div>
  <div class="rightItem regularButton">
    <a class="button" href="<%= url_for :action => :new %>">Add Item</a>
  </div>
</div>



<div class="content">
  <ul>
     <% @menu_items.each do |menuitem| %>

         <li>
           <a href="<%= url_for :controller => :MenuItem, :action => :show, :id => menuitem.object %>">
             <span class="title"><%= menuitem.name %></span><span class="disclosure_indicator"></span>
           </a>
         </li>

     <% end %>
   </ul>
</div>


