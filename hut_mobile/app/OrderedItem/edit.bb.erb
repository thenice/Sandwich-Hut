<div id="pageTitle">
		<h1>Edit <%= @ordereditem.menu_item_id%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @ordereditem.object %>
    <%= link_to "Delete", :action => :delete, :id => @ordereditem.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @ordereditem.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Menu item: </td>
              			<td class="itemValue"><input type="text" name="ordereditem[menu_item_id]" value="<%= @ordereditem.menu_item_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Order: </td>
              			<td class="itemValue"><input type="text" name="ordereditem[order_id]" value="<%= @ordereditem.order_id %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Ingredients json: </td>
              			<td class="itemValue"><input type="text" name="ordereditem[ingredients_json]" value="<%= @ordereditem.ingredients_json %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Total: </td>
              			<td class="itemValue"><input type="text" name="ordereditem[total]" value="<%= @ordereditem.total %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Special instructions: </td>
              			<td class="itemValue"><input type="text" name="ordereditem[special_instructions]" value="<%= @ordereditem.special_instructions %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Status: </td>
              			<td class="itemValue"><input type="text" name="ordereditem[status]" value="<%= @ordereditem.status %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
