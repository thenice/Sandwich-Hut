<div id="pageTitle">
    <h1>New OrderedItem</h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :index %>
</div>


<div id="content">

    <form method="POST" action="<%= url_for :action => :create %>">
	    <input type="hidden" name="id" value="<%= @ordereditem.object %>"/>
        <table>
    		
    		  <tr>
    			  <td class="itemLabel">Menu item: </td>
    			  <td class="itemValue"><input type="text" name="ordereditem[menu_item_id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Order: </td>
    			  <td class="itemValue"><input type="text" name="ordereditem[order_id]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Ingredients json: </td>
    			  <td class="itemValue"><input type="text" name="ordereditem[ingredients_json]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Total: </td>
    			  <td class="itemValue"><input type="text" name="ordereditem[total]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Special instructions: </td>
    			  <td class="itemValue"><input type="text" name="ordereditem[special_instructions]"/></td>
    		  </tr>
    		
    		  <tr>
    			  <td class="itemLabel">Status: </td>
    			  <td class="itemValue"><input type="text" name="ordereditem[status]"/></td>
    		  </tr>
    		
        </table>
        <input type="submit" class="standardButton" value="Create" />
    </form>
</div>