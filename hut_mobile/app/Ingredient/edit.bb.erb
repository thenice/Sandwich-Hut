<div id="pageTitle">
		<h1>Edit <%= @ingredient.name%></h1>
</div>

<div id="toolbar">
    <%= link_to "Back", :action => :show, :id => @ingredient.object %>
    <%= link_to "Delete", :action => :delete, :id => @ingredient.object %>
</div>


<div id="content">
    <form method="POST" action="<%= url_for :action => :update %>">
    	<input type="hidden" name="id" value="<%= @ingredient.object %>"/>
            <table>
        		
                    <tr>
            			<td class="itemLabel">Name: </td>
              			<td class="itemValue"><input type="text" name="ingredient[name]" value="<%= @ingredient.name %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Description: </td>
              			<td class="itemValue"><input type="text" name="ingredient[description]" value="<%= @ingredient.description %>"/></td>
          		    </tr>
        		
                    <tr>
            			<td class="itemLabel">Price: </td>
              			<td class="itemValue"><input type="text" name="ingredient[price]" value="<%= @ingredient.price %>"/></td>
          		    </tr>
        		
            </table>
            <input type="submit" class="standardButton" value="Update" />
    </form>
</div>
