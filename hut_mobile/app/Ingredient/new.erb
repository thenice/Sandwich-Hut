<div class="pageTitle">
  <h1>New <%= @ingredient.title %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a class="cancel" href="<%= url_for :action => :index %>">Cancel</a>
  </div>
</div>

<div class="content">
  <form method="POST" action="<%= url_for :action => :create %>">
    <input type="hidden" name="id" value="<%= @ingredient.object %>"/>
    <ul>
      
          <li>
            <label for="ingredient[name]" class="fieldLabel">Name</label>
            <input type="text" name="ingredient[name]" <%=
            placeholder("Name") %> />
          </li>
      
          <li>
            <label for="ingredient[description]" class="fieldLabel">Description</label>
            <input type="text" name="ingredient[description]" <%=
            placeholder("Description") %> />
          </li>
      
          <li>
            <label for="ingredient[price]" class="fieldLabel">Price</label>
            <input type="text" name="ingredient[price]" <%=
            placeholder("Price") %> />
          </li>
      
    </ul>
    <input type="submit" class="standardButton" value="Create"/>
  </form>
</div>