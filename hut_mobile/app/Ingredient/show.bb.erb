<div id="pageTitle">
	<h1><%= @ingredient.name%></h1>
</div>

<div id="toolbar">
        <%= link_to "Back", :action => :index %>
        <%= link_to "Edit", :action => :edit, :id => @ingredient.object %>
</div>


<div id="content">

    <table>
      
      <tr>
    	<td class="itemLabel">Name</td>
        <td class="itemValue"><%= @ingredient.name%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Description</td>
        <td class="itemValue"><%= @ingredient.description%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Price</td>
        <td class="itemValue"><%= @ingredient.price%></td>
      </tr>
      
    </table>
</div>