<div class="pageTitle">
  <h1><%= @ingredient.name %></h1>
</div>

<div class="toolbar">
  <div class="leftItem backButton">
    <a href="<%= url_for :action => :index %>">Back</a>
  </div>
  <div class="rightItem regularButton">
    <a href="<%= url_for :action => :edit, :id => @ingredient.object %>">Edit</a>
  </div>
</div>

<div class="content">
  <ul>
    
        <li>
          <div class="itemLabel">Name</div>
          <div class="itemValue"><%= @ingredient.name %></div>
        </li>
    
        <li>
          <div class="itemLabel">Description</div>
          <div class="itemValue"><%= @ingredient.description %></div>
        </li>
    
        <li>
          <div class="itemLabel">Price</div>
          <div class="itemValue"><%= @ingredient.price %></div>
        </li>
    
  </ul>
</div>